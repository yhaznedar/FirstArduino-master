<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/intro2renk"
    android:layout_weight="10">
    <TextView

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:paddingLeft="40dp"
        android:layout_weight="3"
        android:fontFamily="sans-serif"
        android:textColor="#ffffff"
        android:paddingRight="32dp"
        android:textSize="28sp"
        android:text="İşe koyulma zamanı!"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="202dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:src="@drawable/intro2"
        android:layout_gravity="center_horizontal"
        android:layout_weight="2.58" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="#ffffff"
        android:paddingLeft="64dp"
        android:paddingRight="64dp"
        android:textSize="17dp"
        android:text="Tek yapman gereken ilacının saat ve tekrar zamanlarını giriş yapmak!"/>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="64dp" />
</LinearLayout>